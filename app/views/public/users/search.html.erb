<div class="container">
  <h2>ユーザー検索</h2>
<div class="card bg-light shadow p-4">
  <%= form_with url: search_public_users_path, method: :get, local: true do |form| %>
    <div class="input-group mb-3">
      <%= form.text_field :query, placeholder: "ユーザー名,フレンドIDで検索", class: "form-control" %>
      <div class="input-group-append">
        <%= form.submit "検索", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @users.any? %>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item">
          <%= link_to user.name, public_user_path(user) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>該当するユーザーが見つかりませんでした。</p>
  <% end %>
</div>
</div>
<div class="text-center mt-3 mb-3">
<%= link_to "戻る", root_path, class: "btn btn-secondary btn-lg" %>
</div>