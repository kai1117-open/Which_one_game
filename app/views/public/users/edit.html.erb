<div class="container">
  <h2>プロフィール編集</h2>
<div class="card bg-light shadow p-4">
  <%= form_with model: @user, url: public_user_path(@user), method: :patch, local: true , html: { class: "p-4 border rounded shadow-sm bg-white" } do |form| %>
    <div class="mb-3">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :email, "メールアドレス" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :friend_id, "フレンドID" %>
      <%= form.number_field :friend_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :introduction, "自己紹介" %>
      <%= form.text_area :introduction, class: "form-control" %>
    </div>

    <%= form.submit "更新", class: "btn btn-primary w-100" %>
  <% end %>
</div>
<div class="text-center mt-3 mb-3">
  <%= link_to "戻る", "javascript:history.back()", class: "btn btn-secondary btn-lg" %>
</div>
</div>