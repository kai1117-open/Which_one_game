<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-12"> <!-- スマホ対応のcol-12を追加 -->
      <h2 class="text-center text-primary mb-4">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-4 border rounded shadow-sm bg-white" }) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <!-- 名前フィールド -->
        <div class="form-group">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>

        <!-- メールアドレスフィールド -->
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- パスワードフィールド -->
        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(最低 <%= @minimum_password_length %> 文字)</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- パスワード確認フィールド -->
        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- 登録ボタン -->
        <div class="form-group text-center">
          <%= f.submit "登録", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>

      <!-- リンクセクション -->
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
