<div class="container">
  <h2 class="text-primary font-weight-bold">部屋を作成</h2>

  <%= form_with model: @quiz_room, url: public_quiz_rooms_path, method: :post, local: true do |form| %>

    <div class="mb-3">
      <%= form.label :room_name, "部屋の名前" %>
      <%= form.text_field :room_name, class: "form-control" %>
    </div>

    <%= form.submit "部屋を作成", class: "btn btn-success" %>
  <% end %>
</div>
