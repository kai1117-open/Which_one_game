<!DOCTYPE html>
<html>
<head>
  <title>Which_one_game</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbo-track': 'reload' %>
</head>
<body>
  <header>
    <nav>
      <div class="logo">
        <%= link_to "Which_one_game", root_path %>
      </div>
      <div class="menu">
        <button id="hamburger" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <ul id="menuItems" class="hidden">
          <% if user_signed_in? %>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
            <li><%= link_to "ユーザー検索", users_path %></li>
            <li><%= link_to "ゲーム開始", "#" %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "新規会員登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
  <main>
    <%= yield %>
  </main>
  <footer>
    <p>&copy; 2025 Which_one_game</p>
  </footer>
</body>
</html>
