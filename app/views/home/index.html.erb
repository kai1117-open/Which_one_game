<main class="bg-light text-center py-5">
  <div class="container">
    <!-- ゲームタイトル -->
    <h1 class="display-4 text-primary font-weight-bold">Which_one_game</h1>
    <p class="lead text-dark">～今のはどっち？～</p>
    
    <!-- ボタンセクション -->
    <div class="mt-4">
      <% if user_signed_in? %>
        <%= link_to "ゲーム開始", top_public_quiz_rooms_path, class: "btn btn-warning btn-lg mx-2" %>
        <%= link_to "マイページ", public_user_path(current_user), class: "btn btn-success btn-lg mx-2" %>
        <%= link_to "クイズ一覧へ", public_quizs_path, class: "btn btn-secondary btn-lg mx-2" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary btn-lg mx-2" %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-danger btn-lg mx-2" %>
      <% end %>
    </div>

    <!-- ゲームの遊び方 -->
    <section class="mt-5">
      <h2 class="text-danger font-weight-bold">ゲームの遊び方</h2>
      <p class="text-muted">
        出題者が読み上げたのは選択肢のどっちなのか考えよう！</br>
      </p>
    </section>


    <section class="mt-5">
    <h2 class="text-primary font-weight-bold">クイズの例</h2>
  
    <table class="table table-striped table-bordered">
      <thead class=" table-danger">
        <tr>
          <th class="text-left" style="width: 50%;">問題文</th>
          <th class="text-left">選択肢1</th>
          <th class="text-left">選択肢2</th>
        </tr>
      </thead>
      <tbody>
        <% @quizzes.each do |quiz| %>
          <tr>
            <td class="text-left fw-bold table-primary"><%= quiz.question_text %></td>
            <td class="text-left"><%= quiz.choice_1 %></td>
            <td class="text-left"><%= quiz.choice_2 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  
  </div>
</main>